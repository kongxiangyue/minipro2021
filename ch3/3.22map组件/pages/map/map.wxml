<view class="demo-box">
  <view class="title">22.map小案例</view>
  <map id="myMap" style="width: 100%;height: 300px" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" show-location></map>
  <button size="mini" bindtap="getCenterLocation">获取位置</button>
  <button size="mini" bindtap="moveToLocation">移动位置</button>
  <button size="mini" bindtap="includePoints">缩放视野展示所有经纬度</button>
</view>