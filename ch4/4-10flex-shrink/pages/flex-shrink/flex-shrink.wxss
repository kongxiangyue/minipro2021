.flex-container {
  margin: 50rpx auto;
  width: 600rpx;
  height: 600rpx;
  border: 1rpx solid #000;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
.item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #000;
  background-color: skyblue;
}
.a {
  width: 300rpx;
  flex-shrink: 1;
}
.b {
  width: 300rpx;
  flex-shrink: 2;
}
.c {
  width: 300rpx;
  flex-shrink: 3;
}
