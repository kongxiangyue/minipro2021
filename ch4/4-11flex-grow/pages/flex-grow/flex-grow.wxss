.flex-container {
  margin: 50rpx auto;
  width: 600rpx;
  height: 600rpx;
  border: 1rpx solid #000000;
  display: flex;
  flex-direction: row; 
}
.item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #000000;
  background-color: skyblue;
}
.a {
  width: 100rpx;
  flex-grow: 1;
}
.b {
  width: 100rpx;
  flex-grow: 2;
}
.c {
  width: 100rpx;
  flex-grow: 3;
}